WindowScreen:
    Home:
    First:
<Home>
    name : "home"
    Screen:
        MDNavigationLayout:
            MDScreenManager:
                Screen:
                    MDBoxLayout:
                        orientation : "vertical"
                        MDTopAppBar:
                            title : "Story's App"
                            left_action_items : [["menu",lambda x : navigation_drawer.set_state("toggle")]]
                            right_action_items : [["dots-vertical"],["pencil",lambda x:app.dictionary()]]
                        MDScreenManager:
                            Screen:
                                MDLabel:
                                    text : "[size=100][b]Hello[/size][/b]"
                                    markup : True
                                    halign : "center"
            MDNavigationDrawer:
                id : navigation_drawer
                radius : [0]
                MDNavigationDrawerMenu:
                    MDNavigationDrawerItem:
                        text : "Account"
                        icon : "account"
                    MDNavigationDrawerItem:
                        text : "G-Mail"
                        icon : "gmail"
<First>
    name : "first"
    MDBoxLayout:
        orientation : "vertical"
        MDTopAppBar:
            title : "Dictionary"
            left_action_items : [["arrow-left", lambda x:app.back()]]
            pos_hint : {"top":1}
        ScreenManager:
            Screen:
                MDTextField:
                    multiline : False
                    icon_right  : "account"
                    size_hint_x : None
                    width : 300
                    pos_hint : {"center_x":0.5}
        MDLabel:
            text : "[size=100][b]Meaning[/size][/b]"
            markup : True
            pos_hint : { "center_x":0.5}

