<SliderApp>
    #slide_text : label_text
    BoxLayout:
        size : root.width,root.height
        orientation : "vertical"
        spacing : 20
        padding : 50
        Label:
            id : label_text
            text : "Slide Bar"
            color : (0,0,0,1)
            background_color : (1,1,1,1)
            font_size : 60
            bold : True
            outline_color : "violet"
            outline_width : 3
            canvas.before:
                Color:
                    rgba : (1,1,1,1)
                Rectangle:
                    size : self.size
                    pos : self.pos
        Slider:
            min : 1
            max : 100
            step : 1
            orientation : "horizontal"
            size_hint : (0.5,1)
            pos_hint : {"center_x":0.5}
            on_value : root.slide(*args)
